<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right|bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <TableLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:stretchColumns="*"        
       >
    
        <TableRow>
            <TextView android:layout_span="2"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size"
                />
		</TableRow>
        
        <TableRow>

        	<TextView
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_gravity="right|center"
        	    android:text="@string/label_s3_number"        	    
        	    android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/s3_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
				android:gravity="left"
                
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />
        </TableRow>
        
              <TableRow>

            <TextView                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="@string/label_s3_date"
                
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size"/>

            <TextView
                android:id="@+id/s3_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
				android:gravity="left"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />

        </TableRow>
          <TableRow>
            
            <TextView                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="@string/label_s3_initiator"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/s3_initiator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
				android:gravity="left"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />

        </TableRow>
          <TableRow>

            <TextView                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="@string/label_s3_customer"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/s3_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
				android:gravity="left"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />

        </TableRow>
          <TableRow>

            <TextView                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="@string/label_s3_contact"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/s3_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
				android:gravity="left"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />

        </TableRow>
       <TableRow>
            <TextView                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="@string/label_s3_trademark"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />
            <TextView
                android:id="@+id/s3_trademark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
				android:gravity="left"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />
</TableRow>
<TableRow>
            <TextView                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="@string/label_s3_address"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/s3_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
				android:gravity="left"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />
</TableRow>
<TableRow>

            <TextView                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="@string/label_s3_visitpurpose"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/s3_visitpurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
				android:gravity="left"
                android:fontFamily="@string/text_family"
        android:textSize="@dimen/text_size" />
</TableRow>
          
              </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/but_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="@string/but_prev"
            android:visibility="gone"
             />

        <Button
            android:id="@+id/but_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="@string/but_quit" />
        
        <Button
            android:id="@+id/but_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/but_prev"
            android:layout_alignBottom="@+id/but_prev"
            android:layout_alignRight="@+id/but_prev"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="@string/but_next" />

    </LinearLayout>

</RelativeLayout>